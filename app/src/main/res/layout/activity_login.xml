<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"

    tools:context="com.example.ejy77.myapplication.Login">




    <ImageView
        android:id="@+id/iv0"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/sklogo"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView

        android:layout_marginTop="20dp"
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Welcome To App Sell"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="#00000000"
        android:textSize="30dp"
        android:layout_below="@+id/iv0"
        />


    <EditText
        android:id="@+id/et0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/tv0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/et0"
        android:textSize="@dimen/text_medium"
        android:layout_alignStart="@+id/et0" />


    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Login"
        android:onClick="LoginClick"
        android:textColor="@android:color/white"
        android:background="@drawable/my_button"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignStart="@+id/iv0" />
    <Button
        android:id="@+id/btn1"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:onClick="RegisterClick"
        android:background="@drawable/my_button"
        android:layout_below="@+id/et1"
        android:layout_alignEnd="@+id/et1"
        android:layout_marginTop="16dp" />


</RelativeLayout >